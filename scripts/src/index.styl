@import 'vendor'

*
  -webkit-user-select none
  -webkit-text-size-adjust none
  -webkit-tap-highlight-color rgba(0,0,0,0)
:focus
  outline 0 none

body
  font 2.4rem/1.2 Helvetica,sans-serif
  background #f8f8f8
  //background pink
html, body, #app
  height 100%
body, ul, ol
  padding 0
  margin 0
#app::after
  content " "
  display block
  height 200px
a
  text-decoration none
  color #0d0d0d
  &.more
    h=124px
    display block
    margin-top 20px
    height h
    line-height h
    text-align center
    font-size 38px
    color _alpha(.9)
    background rgba(255,255,255, .4)
    _round(.25, 6px)
    border-radius 1rem
  &:active
    background #ccc

img
  max-width 100%
  display inline-block
  &.lazy
    opacity .5
  &.loaded
    opacity 1
    -webkit-transition opacity 1s ease-in-out

[hide]
  display none

.navigator
  .search
    d=gap
    display block
    width 100%
    padding d d d d*3
    margin-bottom d
    border 1px solid #ccc
    _round(.2, 6px)
    font-size d
    color _alpha(.4)
    -webkit-box-sizing border-box
    background url(img/search2.png) no-repeat d 50%
  .banner-wrap
    h = 520px
    //display flex
    position relative
    height h
    //_border(.15, 6px)
    //box-shadow inset 0 0 12px #000
    //overflow hidden
    canvas
      max-width 100%
    .item
      //display none
      position absolute
      opacity .1
      height h
      &.active
        //display block
        z-index 9
        -webkit-transition opacity 2s ease-in-out
        opacity 1
    .indicator
      text-align right
      margin-top -12px
      position absolute
      z-index 10
      right 8px
      bottom 12px
      i
        d=14px
        display inline-block
        margin-right 8px
        width d
        height d
        background _alpha(.2)
        border-radius 50%
        &.active
          h = d - 2
          width h
          height h
          background #fff
          border 2px solid _alpha(.2)

  &.online
    nav
      d=27px
      display flex
      flex-direction row
      margin gap 0 0 (-(d))
      a
        flex 1
        margin-left d
        padding 130px 0 20px
        text-align center
        border-radius 6px
        font-size 34px
        text-transform uppercase
        color #fff
        img
          display block
          margin 0 auto 15px
        &:nth-of-type(1)
          background #e7932b url(img/top.png) no-repeat 50% 30px
        &:nth-of-type(2)
          background #75BA43 url(img/artist.png) no-repeat 50% 30px
        &:nth-of-type(3)
          background #4894DB url(img/playlist.png) no-repeat 50% 30px
        &:nth-of-type(4)
          background #8361AC url(img/fm.png) no-repeat 50% 30px
  &.local
    nav
      display flex
      flex-direction row
      flex-wrap wrap
      border-bottom 1px solid #ccc
    a
      flex 0 0 50%
      //height 10rem
      d=50px
      padding d d d 200px
      -webkit-box-sizing border-box
      background-position 34px 50%
      background-repeat no-repeat
      border-top 1px solid #ccc
      &:nth-of-type(1)
        background-image url(img/local_download.png)
      &:nth-of-type(2)
        background-image url(img/local_quaver.png)
      &:nth-of-type(3)
        background-image url(img/local_heart.png)
      &:nth-of-type(4)
        background-image url(img/local_mic.png)
      &:nth-of-type(2n-1)
        border-right 1px solid #ccc


.box
  d=gap
  padding d d 100px
  .hd
    padding-left 3px
    color _alpha(.8)
    overflow hidden
    a
      float right
  .cover
    _round(.15, 6px)
    object-fit cover
    width 100%
    &.artist
    &.avatar
      border-radius 50%
  .title
    font-size 40px
    color _alpha(.95)
  .desc
    font-size 34px
    margin-top 10px
    color _alpha(.6)
  .tag
    d=15px
    font-style normal
    color kolor_tag
    margin-left d
    padding-left d
    border-left 1px solid #adadad
  .hq
    padding 5px 10px
    margin -1rem 0 0 1rem
    vertical-align middle
    font-size 1.2rem
    color kolor_tag
    border 1px solid kolor_tag
    border-radius .5rem

  &.normal
    d=gap
    .bd
      display flex
      flex-direction row
      flex-wrap wrap
      margin d 0 0 (-(d))
      list-style none
    .item
      flex 0 0 33.3333%
      padding-left d
      padding-bottom 50px
      -webkit-box-sizing border-box
    .title
      max-height 2
      overflow hidden
      text-overflow ellipsis

  &.single
    .hd
      padding-bottom 2rem
    li
      padding 0
      margin 0
    .item
      display flex
      flex-direction row
      align-items center
      justify-content flex-start
      padding d 0
      border-top 1px solid _alpha(.15)
    .row
      flex auto
      &:nth-of-type(1)
        margin-right 50px

.icon
  d=5rem
  display inline-block
  width d
  height d
  &-download
    background url(img/download_n.png) 100% 50% no-repeat
    &:active
      background-image url(img/download_p.png)
  &-multiple
    background url(img/multiple.png) 100% 50% no-repeat


.page_home_online
  #release
    .title, .desc
      white-space nowrap
  #random
    .item
      padding-right gap
      background url(img/arrow_small.png) 98% 50% no-repeat
  #random, #fm
    .row:nth-of-type(1)
      flex 0 0 170px
  #billboard
    .item
      padding-right gap
      background url(img/arrow_big.png) 99% 50% no-repeat
    .desc
      padding-left 0
      list-style none
    li
      margin-top 20px
      single_line()
    .row:nth-of-type(1)
      flex 0 0 320px
    .row:nth-of-type(2)
      width 1px
  #hot_song
    .row:nth-of-type(3)
      flex 0 0 5rem
      height 5rem
    .row:nth-of-type(1)
      flex 0 0 125px
  #artist .box
    padding-bottom 70px
    .row:nth-of-type(1)
      flex 0 0 160px
    .row:nth-of-type(2)
      width 1px
    .desc
      single_line()
  #footer .box
    padding 0 gap 70px
    nav
      margin-top 0

.page_home_local
  .user_info
    display flex
    padding 54px gap 24px
    flex-direction row
    align-items center
    justify-content flex-start
    .avatar
      margin-left 34px
      width auto
    .row:nth-of-type(1)
      flex 0 0 250px
    .row:nth-of-type(3)
      width 1px
      a
        padding-right gap*2
        background url(img/arrow_big.png) 99% 50% no-repeat

  .row
    flex auto
  .single .item
    padding-right gap
    background url(img/arrow_big.png) 99% 50% no-repeat
    &:last-of-type
      border-bottom 1px solid _alpha(.15)
  .single .row:nth-of-type(1)
    margin-right 40px
    flex 0 0 170px
  #mine .box
    padding-bottom 0
  .create
    h=153px
    display block
    height h
    line-height h
    font-size gap
    text-align center
    color _alpha(.8)
    img
      margin-right 20px
      vertical-align middle


// page_playlist
.page_detail
  d=50px
  .box
    padding 0 d
  .playlist
    background #fff
  .title
  .desc
    single_line()
  .detail
    padding 62px d 94px
    display flex
    flex-direction row
    align-items center
    justify-content flex-start
    .row
      flex auto
      &:nth-of-type(1)
        flex 0 0 300px
        margin-right d
    .desc
      font-size 2rem

  .action
    padding 0
    background #fafafa
    div
      display flex
      flex-direction row
      flex-wrap wrap
      align-items center
    .icon
      vertical-align middle
      margin-right (d/2)
    span, a //FIXME a.href = action_multi
      flex auto
      width 33.3333%
      white-space nowrap
      overflow hidden //FIXME
      padding d 0
      text-align center
      border-bottom 1px solid _alpha(.2)
      &:nth-of-type(2)
        -webkit-box-sizing border-box
        border-left 1px solid _alpha(.2)
        border-right 1px solid _alpha(.2)
      &:nth-of-type(n+4)
        width 50%
        background #fff
        padding 74px 30px
        text-align left
        border-bottom 1px solid _alpha(.15)
        -webkit-box-sizing border-box
    .unfavorite
      color pink

  .playlist
    .song
      display flex
      flex-direction row
      align-items center
      padding 2rem 1rem 2rem 0
      border-bottom 1px solid #dfdfdf
      &:nth-last-of-type(1)
        border-bottom 0 none
      .row
        flex auto
        &:nth-of-type(2)
          width 1px
      .download
        flex 0 0 5rem
        text-align center
        border 1px solid #c4c4c4
        border-radius 5rem
      .order
        flex 0 0 5rem
        color _alpha(.6)
    .highlight
      .title, .desc
        color #fb6c3c

  #similar
    padding-top 82px
    background #fafafa
    border-top 1px solid #dfdfdf
    //background _alpha(.03) 这里要实色不然背景图会侧漏


.page_more
  .row
    flex auto
    &:nth-of-type(1)
      flex 0 0 300px


.page_search
  d=gap
  .hot_tag, .history
    .hd
      padding-bottom (d/2)
      border-bottom 1px solid _alpha(.15)
      color orange
    .bd
      margin (d/2) 0 0 (-(d))
  .hot_tag span
    display inline-block
    padding 1rem 2rem
    margin (d/2) 0 0 d
    background lightgrey
    border 1px solid #c4c4c4
    border-radius .5rem
  .history .query
    padding-left d
    margin-left d
    padding d 0 d d
    border-bottom 1px solid _alpha(.15)

  .result
    .row
      flex auto
      &:nth-of-type(1)
        flex 0 0 160px


.page_artist
  .box:nth-of-type(1) .item:nth-of-type(1)
    border-top 0 none
  .item
    padding-right gap
    background url(img/arrow_big.png) 99% 50% no-repeat
  .row
    flex auto
    &:nth-of-type(1)
      flex 0 0 160px

@-webkit-keyframes spinner
  to
    -webkit-transform rotate(360deg)

.loader
  height 100%
  text-align center
  img
    //position relative
    margin-top 45%
    //transform translateY(-50%)
    -webkit-animation spinner 2s linear infinite
